<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/activity_detail_meeting_title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/activity_meeting_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="@dimen/margin_large_size"
            android:padding="@dimen/padding_normal_size"
            android:text="Réunion de Mario"
            android:textSize="@dimen/text_extralarge_size"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/activity_detail_meeting_informations_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/activity_detail_meeting_title_txt"
            app:layout_constraintStart_toStartOf="@id/activity_detail_meeting_title_txt"
            android:layout_margin="@dimen/margin_normal_size"
            android:padding="@dimen/padding_normal_size"
            android:background="@drawable/outline"
            android:text="Salle F à 15H30"
            android:textSize="@dimen/text_large_size" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/activity_detail_meeting_member_title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/activity_detail_meeting_informations_txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="@dimen/margin_large_size"
            android:padding="@dimen/padding_normal_size"
            android:text="Participants"
            android:textSize="@dimen/text_extralarge_size"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/activity_detail_meeting_member_list_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/activity_detail_meeting_member_title_txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/outline"
            android:layout_margin="@dimen/margin_large_size"
            android:padding="@dimen/padding_normal_size"
            android:text=" un@hotmail.com \n deux@gmail.com \n trois@amazon.uk \n quatre@wanadoo.jp \n cinq@winamax.com"
            android:textSize="@dimen/text_large_size"
            android:lineSpacingExtra="@dimen/line_spacing_normal"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>