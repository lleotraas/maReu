<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AddReunion"
    android:orientation="vertical"
    >

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_add_reunion_date_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="24dp"
        android:onClick="openDatePicker"
        android:hint="Choisir une date"
        android:textSize="24sp"
        android:drawableLeft="@drawable/ic_event_24"/>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_add_reunion_time_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/activity_add_reunion_date_btn"
        android:padding="16dp"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="24dp"
        android:hint="Choisir une heure"
        android:textSize="24sp"
        android:drawableLeft="@drawable/ic_schedule_24"
        android:onClick="openHourPicker"
        />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/activity_add_reunion_room_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_add_reunion_time_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="26dp"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="24dp"
        android:scrollbarSize="24sp"
        android:gravity="center"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/activity_add_reunion_name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_add_reunion_room_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="24dp"
        android:hint="Votre nom"
        android:textSize="24sp"
        android:gravity="center"/>

    <MultiAutoCompleteTextView
        android:id="@+id/activity_add_reunion_members_mactxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/activity_add_reunion_name_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="24dp"
        android:hint="participants"
        android:textSize="24sp"
        android:gravity="center"/>




</androidx.constraintlayout.widget.ConstraintLayout>