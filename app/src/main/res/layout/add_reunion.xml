<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AddReunion"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/activity_add_reunion_title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="24dp"
        android:hint="Créer une Réunion"
        android:gravity="center"
        android:textSize="32sp"/>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_add_reunion_time_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/activity_add_reunion_title_txt"
        android:padding="16dp"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="24dp"
        android:hint="Choisir une heure"
        android:textSize="24sp"
        android:textAlignment="viewStart"
        android:drawableRight="@drawable/ic_schedule_24"
        android:onClick="openHourPicker"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/activity_add_reunion_room_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal_size"
        android:text="Salle de réunion"
        android:paddingVertical="16dp"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/activity_add_reunion_time_btn"
        app:layout_constraintTop_toBottomOf="@id/activity_add_reunion_time_btn" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/activity_add_reunion_room_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_add_reunion_time_btn"
        app:layout_constraintStart_toEndOf="@id/activity_add_reunion_room_txt"
        android:padding="24dp"
        android:layout_marginTop="@dimen/margin_normal_size"
        android:textSize="24sp"
        android:spinnerDropDownItemStyle="@style/spinnerDropDownItemStyle"
        android:spinnerItemStyle="@style/spinnerItemStyle"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/activity_add_reunion_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_add_reunion_room_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="24dp"
        android:hint="Votre nom"
        android:textSize="24sp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/activity_add_reunion_members_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/activity_add_reunion_name_input"
        app:layout_constraintStart_toStartOf="@id/activity_add_reunion_name_input"
        android:padding="@dimen/padding_normal_size"
        android:layout_marginVertical="16dp"
        android:hint="participants"
        android:textSize="24sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_add_reunion_members_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/activity_add_reunion_members_input"
        app:layout_constraintTop_toBottomOf="@+id/activity_add_reunion_name_input"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="@dimen/padding_normal_size"
        android:layout_margin="@dimen/margin_normal_size"
        android:text="ajouter" />

    <TextView
        android:id="@+id/activity_add_reunion_members_list_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/activity_add_reunion_members_input"
        app:layout_constraintTop_toBottomOf="@+id/activity_add_reunion_members_input"
        android:textSize="@dimen/text_normal_size"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_add_reunion_validate_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/activity_add_reunion_members_list_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="@dimen/padding_normal_size"
        android:text="valider"
        android:textSize="24sp"/>






</androidx.constraintlayout.widget.ConstraintLayout>